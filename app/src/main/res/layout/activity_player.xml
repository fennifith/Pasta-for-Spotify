<layout>
    <data>
        <import type="pasta.streamer.utils.Settings"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/bg"
        android:background="@{Settings.getPrimaryColor(context)}"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame">

                <pasta.streamer.views.SquareImageView
                    android:id="@+id/trackImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|top"
                    android:scaleType="centerCrop"
                    android:src="@drawable/preload"
                    android:background="#fafafa"
                    android:transitionName="image"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_gradient"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:rotation="180"
                    android:src="@drawable/image_gradient"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:id="@+id/seekBarLayout">

                    <TextView
                        android:id="@+id/currentDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textColor="#B3ffffff"
                        android:gravity="right"/>

                    <android.support.v7.widget.AppCompatSeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        app:theme="@style/Widget.AppCompat.SeekBar"
                        android:progressTint="#eee"
                        android:thumbTint="#fff" />

                    <TextView
                        android:id="@+id/finalDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="00:00"
                        android:textColor="#B3ffffff"
                        android:gravity="left"/>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

                </FrameLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="true"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                android:layout_marginBottom="104dp"
                android:layout_below="@+id/frame">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/title"
                        android:textSize="20sp"
                        android:layout_marginBottom="2dp"
                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="?android:textColorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtitle"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="?android:textColorSecondary" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#1f000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/prevButton"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_notify_prev"
                        android:tint="?android:textColorSecondary"
                        android:tintMode="src_in"
                        android:layout_weight="1"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/playButton"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_notify_play"
                        android:tint="?android:textColorPrimary"
                        android:tintMode="src_in"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="8dp" />

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/nextButton"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_notify_next"
                        android:tint="?android:textColorSecondary"
                        android:tintMode="src_in"
                        android:layout_weight="1"
                        android:layout_marginRight="32dp"
                        android:layout_marginEnd="32dp"
                        android:padding="8dp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv"
            android:background="?android:colorBackground"
            android:elevation="8dp"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            app:behavior_peekHeight="104dp" />

    </android.support.design.widget.CoordinatorLayout>
</layout>
